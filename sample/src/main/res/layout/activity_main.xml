<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.itguy.allshare.sample.MainActivity">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="微信分享"
      />

  <CheckBox
      android:id="@+id/shareToMomentCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="分享到朋友圈"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <Button
        android:id="@+id/wxShareTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onWxShareTextButtonClick"
        android:text="文本"/>

    <Button
        android:id="@+id/wxShareLinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onWxShareLinkButtonClick"
        android:text="链接"/>

    <Button
        android:id="@+id/wxShareImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onWxShareImageButtonClick"
        android:text="图片"/>
  </LinearLayout>



  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="QQ分享"
      />

  <CheckBox
      android:id="@+id/shareToQzoneCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="分享到QQ空间"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/qqShareLinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onQQShareLinkButtonClick"
        android:text="链接"/>

    <Button
        android:id="@+id/qqShareImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onQQShareImageButtonClick"
        android:text="图片"/>
  </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="微博分享（开发中…）"
      />
</LinearLayout>
